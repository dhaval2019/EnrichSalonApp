<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_gradient"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.enrich.salonapp.ui.views.CustomTextView
                        android:id="@+id/appointment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20-09-2017"
                        android:textColor="@color/dark_gold"
                        android:textSize="11sp"
                        app:font_type="light" />

                    <com.enrich.salonapp.ui.views.CustomTextView
                        android:id="@+id/appointment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gold_bg_gradient"
                        android:paddingLeft="7dp"
                        android:paddingTop="2dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="2dp"
                        android:text="10 AM"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        app:font_type="regular"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/appointment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:text="Haircut by Master Stylist"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:font_type="bold" />

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/appointment_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="Rs. 2500/-"
                    android:textColor="@color/red"
                    android:textSize="11sp"
                    app:font_type="regular" />

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Enrich Salon"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:font_type="light" />

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/appointment_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infinity Mall II, Malad west, Mumbai 400064"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp"
                    app:font_type="light" />

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/appointment_therapist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Stylist: Varun Barve"
                    android:textColor="@color/dark_gold"
                    android:textSize="11sp"
                    app:font_type="regular" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/appointment_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gold_border"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="CANCEL"
                android:textColor="@color/dark_gold"
                android:textSize="13dp"
                app:font_type="regular" />

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/appointment_reschedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/gold_bg_gradient"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="RESCHEDULE"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:font_type="regular" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>