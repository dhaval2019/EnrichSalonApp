<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ThankyouActivity">

    <ImageView
        android:id="@+id/ivthankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_245dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/thank_you_artwork" />

    <TextView
        android:id="@+id/tvthankyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivthankyou"
        android:layout_marginLeft="@dimen/dimen_35dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:layout_marginRight="@dimen/dimen_35dp"
        android:text="@string/txt_dummy_frnd"
        android:textColor="@color/violet_frnd_text"
        android:textSize="@dimen/dimen_16sp" />

    <Button
        android:id="@+id/continue_shopping_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_pink_btn"
        android:paddingLeft="@dimen/dimen_25dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_25dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:gravity="center"
        android:text="@string/txt_continue_shopping"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_18sp"
        android:layout_marginBottom="@dimen/dimen_60dp"


        />
</RelativeLayout>