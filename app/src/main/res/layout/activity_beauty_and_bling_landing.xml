<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beauty_and_bling_background"
    tools:context=".ui.activities.BeautyAndBlingLandingActivity"
    tools:ignore="MissingPrefix">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/beauty_and_bling_bg"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/beauty_and_bling_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingEnd="@dimen/dimen_20dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:text="SKIP"
            android:textColor="@color/white"
            android:visibility="gone"
            app:font_type="regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/try_a_spin_container"
            android:layout_below="@+id/beauty_and_bling_skip"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_40dp"
            android:paddingRight="@dimen/dimen_40dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/beauty_and_bling_logo_cropped" />

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/bandb_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:gravity="center"
                android:text="Beauty and Bling gives you a chance to win more than once!"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp"
                app:font_type="semi_bold" />

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/bandb_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:gravity="center"
                android:text="Spend Rs.2500 on services or products and spin the wheel for assured reward points of up to 2500"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp"
                app:font_type="ultra_light" />

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/bandb_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:gravity="center"
                android:text="What's more, there are prizes worth Rs. 40 lacs up for grabs in 55 lucky winners"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp"
                app:font_type="ultra_light" />

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/bandb_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:gravity="center"
                android:text="So, do you want to try your luck?"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18sp"
                app:font_type="semi_bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/bandb_text_3_new"
            fontPath="fonts/Quicksand-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:gravity="center"
            android:text="Spin a wheel and win \nupto 100% Cashback!"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/bandb_text_4_new"
            fontPath="fonts/Quicksand-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Spin the wheel \n \u0026 try your luck"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/try_a_spin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="@dimen/dimen_15dp">

            <TextView
                android:id="@+id/try_a_spin"
                fontPath="fonts/Quicksand-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/beauty_and_bling_button"
                android:paddingLeft="@dimen/dimen_25dp"
                android:paddingRight="@dimen/dimen_25dp"
                android:paddingTop="@dimen/dimen_15dp"
                android:paddingBottom="@dimen/dimen_15dp"
                android:textSize="@dimen/dimen_18sp"
                android:text="Continue to reward spin"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/dismiss_spin"
                fontPath="fonts/Quicksand-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_40dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_14sp"
                android:text="Dismiss"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/enrich_logo" />

            <TextView
                fontPath="fonts/Quicksand-Light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Copyright\u00A9 2019 Enrich. All Rights Reserved."
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>