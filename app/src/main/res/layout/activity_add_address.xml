<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.enrich.salonapp.ui.activities.AddAddressActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ffffff">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/drawer_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_15dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- LOCATION -->
        <LinearLayout
            android:id="@+id/location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.enrich.salonapp.ui.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/dark_gold"
                android:textSize="@dimen/dimen_14sp"
                app:font_type="ultra_light" />


            <com.enrich.salonapp.ui.views.CustomEditText
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Enter the location..."
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/dimen_16sp"
                app:font_type="light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gold" />
        </LinearLayout>

        <!-- HOUSE -->
        <LinearLayout
            android:id="@+id/house_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:orientation="vertical">

            <com.enrich.salonapp.ui.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House, Flat No."
                android:textColor="@color/dark_gold"
                android:textSize="@dimen/dimen_14sp"
                app:font_type="ultra_light" />

            <com.enrich.salonapp.ui.views.CustomEditText
                android:id="@+id/house_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Enter your house name or flat number"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/dimen_16sp"
                app:font_type="light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gold" />
        </LinearLayout>

        <!-- LANDMARK -->
        <LinearLayout
            android:id="@+id/landmark_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:orientation="vertical">

            <com.enrich.salonapp.ui.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landmark"
                android:textColor="@color/dark_gold"
                android:textSize="@dimen/dimen_14sp"
                app:font_type="ultra_light" />

            <com.enrich.salonapp.ui.views.CustomEditText
                android:id="@+id/landmark_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Landmarks, Nearby Places, etc."
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/dimen_16sp"
                app:font_type="light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gold" />
        </LinearLayout>

        <!-- ADDRESS TYPE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- HOME -->
            <LinearLayout
                android:id="@+id/home_location_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:src="@drawable/home"
                    android:tint="@color/light_grey" />

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/dimen_14sp"
                    app:font_type="light" />
            </LinearLayout>

            <!-- WORK -->
            <LinearLayout
                android:id="@+id/work_location_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/work_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:src="@drawable/briefcase"
                    android:tint="@color/light_grey" />

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/work_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WORK"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/dimen_14sp"
                    app:font_type="light" />
            </LinearLayout>

            <!-- WORK -->
            <LinearLayout
                android:id="@+id/other_location_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/other_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:src="@drawable/map_marker"
                    android:tint="@color/light_grey" />

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/other_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTHER"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/dimen_14sp"
                    app:font_type="light" />
            </LinearLayout>
        </LinearLayout>

        <com.enrich.salonapp.ui.views.CustomButton
            android:id="@+id/save_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:background="@drawable/gold_bg_gradient_curved"
            android:text="Save"
            android:textColor="@color/white"
            app:font_type="semi_bold" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
