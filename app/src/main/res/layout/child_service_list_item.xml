<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/quantity_container"
            android:orientation="vertical"
            android:padding="5dp">

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Bridal make up (Make Up, Hair do and Saree Draping)"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:font_type="light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.enrich.salonapp.ui.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/Rs"
                        android:textColor="@color/red"
                        android:textSize="14sp" />

                    <com.enrich.salonapp.ui.views.CustomTextView
                        android:id="@+id/main_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="600000"
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        app:font_type="light" />
                </LinearLayout>

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/service_therapist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingRight="5dp"
                    android:text="View Details"
                    android:textColor="@color/grey"
                    android:textSize="13dp"
                    app:font_type="light"
                    android:layout_marginTop="@dimen/dimen_5dp"/>

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/view_service_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/red_bg_gradient"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="View Details"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:font_type="light"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quantity_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_info_outline"
                android:tint="@color/red"
                android:alpha="1"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/service_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/outline_card" />
</LinearLayout>