<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingEnd="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/reschedule_service_selector"
            android:orientation="vertical">

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/reschedule_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hair cut by graduate stylist"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14sp"
                app:font_type="regular" />

            <com.enrich.salonapp.ui.views.CustomTextView
                android:id="@+id/reschedule_service_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 500"
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_14sp"
                app:font_type="light" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/reschedule_service_therapist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varun Barve"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_14sp"
                    app:font_type="light" />

                <com.enrich.salonapp.ui.views.CustomTextView
                    android:id="@+id/reschedule_service_therapist_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Change"
                    android:textColor="@color/dark_gold"
                    android:textSize="@dimen/dimen_14sp"
                    app:font_type="light" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/reschedule_service_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#e5e5e5" />
</LinearLayout>