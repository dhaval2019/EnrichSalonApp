<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_7dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_home_page_category_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/product_home_page_category_name"
            android:layout_alignEnd="@+id/product_home_page_category_name"
            android:layout_alignStart="@+id/product_home_page_category_name"
            android:layout_alignTop="@+id/product_home_page_category_name"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_ext" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/product_home_page_category_name"
            android:layout_alignEnd="@+id/product_home_page_category_name"
            android:layout_alignStart="@+id/product_home_page_category_name"
            android:layout_alignTop="@+id/product_home_page_category_name"
            android:background="#BB424242" />

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/product_home_page_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:padding="@dimen/dimen_10dp"
            android:text="Misc Hair Range"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:font_type="regular" />
    </RelativeLayout>

</android.support.v7.widget.CardView>