<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_round_rect_border"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="@color/dark_gold"
            android:textSize="10sp"
            app:font_type="light" />

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gold_bg_gradient"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="10 AM"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:font_type="regular" />

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/appointment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="Haircut by Master Stylist"
            android:textColor="@color/dark_gold"
            android:textSize="18sp"
            app:font_type="bold" />

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/appointment_therapist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enrich Salon"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:font_type="light" />

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/appointment_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infinity Mall II, Malad west, Mumbai 400064"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:font_type="light" />

    </LinearLayout>

</android.support.v7.widget.CardView>