<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/cash_price_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cash_img"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:src="@drawable/payment_cash_xxhdpi"
            android:tint="@color/red" />

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/payable_cash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cash_img"
            android:layout_gravity="center"
            android:text="Payable Cash"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:font_type="regular" />

        <com.enrich.salonapp.ui.views.CustomTextView
            android:id="@+id/cod_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payable_cash_text"
            android:layout_gravity="center"
            android:text="Rs. 420"
            android:textColor="@color/black"
            android:textSize="36sp"
            app:font_type="semi_bold" />
    </LinearLayout>

    <com.enrich.salonapp.ui.views.CustomButton
        android:id="@+id/cash_payment_proceed_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/cash_price_container"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_bg_gradient_curved"
        android:text="PAY"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>