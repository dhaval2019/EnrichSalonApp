<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/dimen_15dp">

    <com.enrich.salonapp.ui.views.CustomTextView
        android:id="@+id/is_spin_taken"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/spin_list_bg_red"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/dimen_18sp"
        app:font_type="regular" />

    <com.enrich.salonapp.ui.views.CustomTextView
        android:id="@+id/spin_number"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="@drawable/spin_list_bg_white"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20sp"
        app:font_type="regular" />

</FrameLayout>