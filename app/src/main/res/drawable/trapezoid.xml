<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <padding android:top="30dp" />
            <size
                android:width="185dp"
                android:height="50dp" />
            <solid android:color="@color/blueLight" />
        </shape>
    </item>
    <!-- Darker colored line-->
    <!--<item>-->
